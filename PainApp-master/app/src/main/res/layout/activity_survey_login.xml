<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D648D"
    tools:context=".LoadFileActivity">

    <TextView
        android:id="@+id/patientTextView"
        android:layout_width="519dp"
        android:layout_height="49dp"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:text="Please enter the Patient ID"
        android:textColor="@color/hell"
        android:textColorHighlight="@color/hell"
        android:textColorHint="@color/hell"
        android:textColorLink="@color/hell"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/patientID_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="660dp"
        android:textColorHint="@color/hell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_choose_file"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginStart="161dp"
        android:layout_marginLeft="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"
        android:layout_marginBottom="360dp"
        android:background="@drawable/button_layout"
        android:text="Choose file"
        android:textColor="@color/dunkel"
        android:textSize="24sp"
        app:backgroundTint="@color/hell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadedSurvey_text_view"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_previousLogin"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_layout"
        android:foreground="@drawable/backbtn"
        android:textColor="@color/dunkel"
        android:textSize="24sp"
        app:backgroundTint="@color/hell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_continueLogin"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_layout"
        android:foreground="@drawable/weiterbtn"
        android:textColor="@color/dunkel"
        android:textSize="24sp"
        app:backgroundTint="@color/hell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"  />

    <TextView
        android:id="@+id/loadedSurvey_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Loaded Survey"
        android:textColor="@color/hell"
        android:textColorHighlight="@color/hell"
        android:textColorHint="@color/hell"
        android:textColorLink="@color/hell"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patientID_layout" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/pID_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Patienten ID"
        android:inputType="number"
        android:textColor="@color/hell"
        android:textColorHighlight="@color/hell"
        android:textColorHint="@color/hell"
        android:textColorLink="@color/hell"
        android:textCursorDrawable="@color/hell"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/loadedSurvey_text_view"
        app:layout_constraintTop_toBottomOf="@+id/patientTextView"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>